ion-header
	ion-navbar(secondary)
		ion-title {{ title }}
		ion-buttons(end)
			button((click)="addChecklist()")
				ion-icon(name="add-circle")

ion-content.home
	ion-list(no-lines)
		ion-item-sliding(*ngFor="let ch of checklists")
			button.item(ion-item, (click)="viewChecklist()")
				ion-item-content {{ ch.title }}
					span.detail {{ ch.items.length }} items

			ion-item-options
				button(color="light")
					ion-icon(name="clipboard")

				button(color="danger")
					ion-icon(name="trash")
